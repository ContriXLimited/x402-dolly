{
  "name": "@askdolly/x402-embed-sdk",
  "version": "0.0.1",
  "description": "Embeddable X402 payment widget for Solana - floating chat interface with built-in USDC payment support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "solana",
    "x402",
    "payment",
    "usdc",
    "web3",
    "chat",
    "widget",
    "embed",
    "floating-chat"
  ],
  "author": "Dolly",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ContriXLimited/x402-dolly.git",
    "directory": "packages/x402-embed-sdk"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "@solana/wallet-adapter-react": "^0.15.0"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.14",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/web3.js": "^1.98.4",
    "lucide-react": "^0.553.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "eslint": "^9.39.1",
    "tsup": "^8.3.5",
    "typescript": "5.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
